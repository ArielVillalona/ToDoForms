<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:local="clr-namespace:ToDoForms"
             x:Class="ToDoForms.MainPage">

    <StackLayout VerticalOptions="Center" Margin="20">
        <!-- Place new controls here -->
        <Entry x:Name="UsuarioEntry" Placeholder="Nombre de usuario"/>
        <Entry x:Name="PasswordEntry" Placeholder="Contraseña" IsPassword="True"/>
        <Button Text="Iniciar Sesion" Clicked="Button_Clicked"/>
        <Label x:Name="resultadoLabel" HorizontalOptions="Center"/>
    </StackLayout>
</ContentPage>
